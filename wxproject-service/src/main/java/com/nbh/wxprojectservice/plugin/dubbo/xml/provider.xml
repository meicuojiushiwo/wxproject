<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://dubbo.apache.org/schema/dubbo        http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="wxproject-common-app"/>

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://192.168.0.102:2181,192.168.0.106:2181,192.168.0.107:2181" timeout="10000"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <!-- 和本地bean一样实现服务 -->
    <bean id="testDubboService" class="com.nbh.wxprojectservice.plugin.dubbo.api.impl.TestDubboServiceImpl"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service ref="testDubboService" interface="com.nbh.wxprojectserviceapi.plugin.dubbo.api.TestDubboService"/>


</beans>